<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
   



<Dialog id="loginDialog" title="user login"  >
        
        
<content>
<VBox>
<Label text="name"></Label>
<Input id="idName" width="180px"></Input>

<Label text="password"></Label>
<Input id="idPwd" width="180px" type="Password"></Input>

</VBox>
<HBox >
<Button text="Login" width="150px" press="onLogin"></Button>
<Button text="Cancel" width="150px" press="onCancel"></Button>
</HBox>

</content>

            


   
    </Dialog>



</core:FragmentDefinition>
